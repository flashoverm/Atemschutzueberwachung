<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.thral.atemschutzueberwachung">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:name=".DraegermanObservationApplication"
        android:icon="@drawable/atemschutz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.StartActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MenuActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.observation.MonitoringOverviewActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.observation.MonitoringDetailActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.administration.AdminMenuActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.administration.OperationAdminActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.administration.DraegermanAdminActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.administration.SettingsActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>