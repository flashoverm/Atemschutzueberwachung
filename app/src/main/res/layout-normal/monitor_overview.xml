<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dataViewPadding"
    android:weightSum="1.0">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/timer"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1"
            android:text="00:00"
            android:textSize="38dp"/>

        <TextView
            android:id="@+id/squadname"
            android:maxLines="1"
            android:text="Atemschutztrupp1Atemschutztrupp1Atemschutztrupp1"
            android:layout_width="0dp"
            app:layout_gravity="fill_horizontal"
            android:textAlignment="textEnd"
            android:textSize="26dp"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/state"
            android:text="Ankunft Ziel"
            android:textSize="16dp"
            android:layout_width="0dp"
            app:layout_gravity="fill_horizontal"
            android:textAlignment="textEnd"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowWeight="3"/>

    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/leaderText"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:text="@string/leaderText"/>

        <TextView
            android:id="@+id/memberText"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_rowWeight="1"
            android:text="@string/memberText"/>

        <TextView
            android:id="@+id/lastPressureText"
            android:layout_width="0dp"
            android:text="@string/pressureText"
            android:textAlignment="textEnd"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderName"
            android:maxLines="1"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:layout_width="0dp"
            app:layout_gravity="fill_horizontal"
            android:text="Atemschutz 10Atemschutz 10Atemschutz 10"/>

        <TextView
            android:id="@+id/memberName"
            android:maxLines="1"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            android:layout_width="0dp"
            app:layout_gravity="fill_horizontal"
            android:text="Atemschutz 2Atemschutz 2Atemschutz 2"/>


        <TextView
            android:id="@+id/lastPressureTime"
            app:layout_column="2"
            app:layout_row="0"
            app:layout_rowWeight="1"
            android:text="20"/>

        <TextView
            android:id="@+id/leaderPressure"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:text="180"/>

        <TextView
            android:id="@+id/memberPressure"
            app:layout_column="2"
            app:layout_row="2"
            app:layout_rowWeight="1"
            android:text="180"/>

        <TextView
            android:id="@+id/returnText"
            app:layout_column="3"
            app:layout_row="0"
            app:layout_rowWeight="1"
            android:text="@string/retreatText"/>

        <TextView
            android:id="@+id/leaderReturnPressure"
            app:layout_column="3"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:text="60"/>

        <TextView
            android:id="@+id/memberReturnPressure"
            app:layout_column="3"
            app:layout_row="2"
            app:layout_rowWeight="1"
            android:text="60"/>

    </android.support.v7.widget.GridLayout>

</LinearLayout>