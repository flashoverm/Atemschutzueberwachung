<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dataViewPadding"
    android:weightSum="1.0">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/timer"
            android:maxLines="1"
            android:text="00:00"
            android:textSize="@dimen/textSizeOverviewTimer"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1"
            android:layout_marginRight="@dimen/textMargin"/>

        <TextView
            android:id="@+id/squadname"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Atemschutztrupp1Ateschutztrupp1Ateschutztrupp1"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textSizeOverviewBig"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/state"
            android:layout_width="0dp"
            android:text="Ankunft Ziel"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textSizeOverviewMedium"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_rowWeight="1"/>

    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:layout_marginTop="@dimen/textMargin">

        <TextView
            android:id="@+id/leaderText"
            android:layout_marginEnd="@dimen/textMargin"
            android:text="@string/leaderText"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberText"
            android:layout_marginEnd="@dimen/textMargin"
            android:text="@string/memberText"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/lastPressureText"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/textMargin"
            android:text="@string/pressureText"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderName"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Atemschutz 10Atemschutz 10Atemschutz 10"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberName"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Atemschutz 2Atemschutz 2Atemschutz 2"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2"
            app:layout_rowWeight="1" />


        <TextView
            android:id="@+id/lastPressureTime"
            android:layout_marginStart="@dimen/textMarginHalf"
            android:text="20 Min."
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="2"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderPressure"
            android:layout_marginStart="@dimen/textMargin"
            android:text="180"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberPressure"
            android:layout_marginStart="@dimen/textMargin"
            android:text="180"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="2"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/returnText"
            android:layout_marginStart="@dimen/textMargin"
            android:text="@string/retreatText"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="3"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderReturnPressure"
            android:text="60"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="3"
            app:layout_gravity="end"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberReturnPressure"
            android:text="60"
            android:textSize="@dimen/textSizeOverview"
            app:layout_column="3"
            app:layout_gravity="end"
            app:layout_row="2"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>

</LinearLayout>