<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/timer"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:layout_rowWeight="2"
        android:maxLines="1"
        android:text="10:52 "
        android:textSize="50dp" />

    <TextView
        android:id="@+id/squadname"
        android:layout_column="2"
        android:layout_columnSpan="5"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:maxLines="1"
        android:text="Atemschutztrupp 1"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/stateText"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:text="@string/statusText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/state"
        android:layout_column="3"
        android:layout_columnSpan="4"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:text="Auf Rückzug"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/orderText"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:text="@string/orderTextShort" />

    <TextView
        android:id="@+id/order"
        android:layout_column="3"
        android:layout_columnSpan="4"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:text="Brandbekämpfung" />


    <TextView
        android:id="@+id/pressureText"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:text="Druck bei:"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/pressureTime1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:text="10 Min"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/pressureTime2"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:text="20 Min"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/pressureTime3"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:text="30 Min"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/returnText"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:text="Rückzug bei:"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/leaderText"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:text="Truppführer:" />

    <TextView
        android:id="@+id/leaderName"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:text="Müller" />

    <TextView
        android:id="@+id/leaderPressure1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:text="250"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/leaderPressure2"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:text="160"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/leaderPressure3"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:text="120"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/leaderReturnPressure"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:text="80"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/memberText"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="Truppmann:" />

    <TextView
        android:id="@+id/memberName"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="Meier" />

    <TextView
        android:id="@+id/memberPressure1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="240"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/memberPressure2"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="150"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/memberPressure3"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="100"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/memberReturnPressure"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="70"
        android:textAlignment="center" />

</GridLayout>