<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="DraegermanTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/lightblue</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="alertDialogTheme">@style/Dialog</item>
        <item name="toolbarStyle">@style/ActionBar</item>
        <item name="colorAccent">@color/red</item>
        <item name="progressBarStyle">@style/Progress</item>
        <item name="android:textViewStyle">@style/TextAppearance</item>
        <item name="android:statusBarColor">@color/darkblue</item>
    </style>

    <style name="Button" parent="android:style/Widget.Button">
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/blue</item> <!-- Buttons -->
        <item name="android:textColorPrimary">@color/black</item>    <!-- Header -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Progress" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="tint">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>