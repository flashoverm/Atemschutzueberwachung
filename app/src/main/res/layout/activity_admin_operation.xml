<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarOperationAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgrey"
        app:title="@string/operationAdminLabel"
        app:titleTextColor="@color/lighgrey"/>

    <ListView
        android:id="@+id/operationList"
        android:layout_below="@id/toolbarOperationAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

    <TextView
        android:id="@+id/noOperations"
        android:layout_below="@id/toolbarOperationAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/noCompletedOperations"
        android:textAlignment="center"
        android:gravity="center_vertical"/>

    <RelativeLayout
        android:id="@+id/operationsProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentGrey"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false" />
    </RelativeLayout>
</RelativeLayout>