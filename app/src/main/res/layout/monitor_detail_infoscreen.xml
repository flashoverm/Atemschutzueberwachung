<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dataViewPadding"
    android:weightSum="1.0">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/timer"
            android:layout_marginEnd="@dimen/textMargin"
            android:maxLines="1"
            android:text="10:52 "
            android:textSize="@dimen/textSizeDetailTimer"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_rowSpan="3"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/squadname"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Atemschutztrupp 1"
            android:textSize="@dimen/textSizeDetailBig"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1" />


        <TextView
            android:id="@+id/stateText"
            android:layout_marginEnd="@dimen/textMargin"
            android:text="@string/statusText"
            android:textSize="@dimen/textSizeDetailMedium"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/state"
            android:layout_width="0dp"
            android:text="Auf R체ckzug"
            android:textSize="@dimen/textSizeDetailMedium"
            app:layout_column="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/orderText"
            android:layout_marginEnd="@dimen/textMargin"
            android:text="@string/orderTextShort"
            android:textSize="@dimen/textSizeDetailMedium"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:text="Brandbek채mpfung"
            android:textSize="@dimen/textSizeDetailMedium"
            app:layout_column="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/leaderText"
            android:paddingEnd="@dimen/textMargin"
            android:text="@string/leaderText"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberText"
            android:paddingEnd="@dimen/textMargin"
            android:text="@string/memberText"
            android:textSize="@dimen/textSizeDetail"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/pressureText"
            android:layout_width="0dp"
            android:paddingEnd="@dimen/textMarginHalf"
            android:text="@string/pressureText"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textSizeDetail"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderName"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="M체llerM체ller"
            android:textSize="@dimen/textSizeDetail"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberName"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            android:layout_width="0dp"
            app:layout_gravity="fill_horizontal"
            android:text="Meier"
            android:textSize="@dimen/textSizeDetail" />

        <TextView
            android:id="@+id/pressureTime1"
            android:paddingEnd="@dimen/textMarginHalf"
            android:paddingStart="@dimen/textMarginHalf"
            android:text="10 Min"
            android:textSize="@dimen/textSizeDetail"
            app:layout_column="2"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderPressure1"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:text="250"
            android:layout_marginStart="@dimen/textMargin"
            android:textSize="@dimen/textSizeDetail"/>

        <TextView
            android:id="@+id/memberPressure1"
            app:layout_column="2"
            app:layout_row="2"
            app:layout_rowWeight="1"
            android:text="240"
            android:layout_marginStart="@dimen/textMargin"
            android:textSize="@dimen/textSizeDetail"/>

        <TextView
            android:id="@+id/pressureTime2"
            android:paddingEnd="@dimen/textMarginHalf"
            android:paddingStart="@dimen/textMarginHalf"
            android:text="20 Min"
            android:textSize="@dimen/textSizeDetail"
            app:layout_column="3"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderPressure2"
            app:layout_column="3"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:text="160"
            android:layout_marginStart="@dimen/textMargin"
            android:textSize="@dimen/textSizeDetail"/>

        <TextView
            android:id="@+id/memberPressure2"
            app:layout_column="3"
            app:layout_row="2"
            app:layout_rowWeight="1"
            android:text="150"
            android:layout_marginStart="@dimen/textMargin"
            android:textSize="@dimen/textSizeDetail"/>

        <TextView
            android:id="@+id/pressureTime3"
            android:paddingEnd="@dimen/textMarginHalf"
            android:paddingStart="@dimen/textMarginHalf"
            android:text="30 Min"
            android:textSize="@dimen/textSizeDetail"
            app:layout_column="4"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderPressure3"
            app:layout_column="4"
            app:layout_row="1"
            app:layout_rowWeight="1"
            android:text="120"
            android:layout_marginStart="@dimen/textMargin"
            android:textSize="@dimen/textSizeDetail"/>

        <TextView
            android:id="@+id/memberPressure3"
            app:layout_column="4"
            app:layout_row="2"
            app:layout_rowWeight="1"
            android:text="100"
            android:layout_marginStart="@dimen/textMargin"
            android:textSize="@dimen/textSizeDetail"/>

        <TextView
            android:id="@+id/returnText"
            android:paddingStart="@dimen/textMarginHalf"
            android:text="@string/retreatText"
            android:textSize="@dimen/textSizeDetail"
            app:layout_column="5"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderReturnPressure"
            app:layout_column="5"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_gravity="end"
            android:text="80"
            android:textSize="@dimen/textSizeDetail"/>

        <TextView
            android:id="@+id/memberReturnPressure"
            app:layout_column="5"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_gravity="end"
            android:text="70"
            android:textSize="@dimen/textSizeDetail"/>

    </android.support.v7.widget.GridLayout>

</LinearLayout>