<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2.5">

        <include
            android:id="@+id/overview_small_1"
            layout="@layout/monitor_overview_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0" />

        <include
            android:id="@+id/overview_small_2"
            layout="@layout/monitor_overview_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0" />

        <include
            android:id="@+id/overview_small_3"
            layout="@layout/monitor_overview_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/overview_1"
            android:layout_margin="2dp"
            android:layout_weight="1.0" />

    </LinearLayout>

    <include
        android:id="@+id/detail"
        layout="@layout/monitor_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/overview_2"
        android:layout_margin="2dp"
        android:layout_weight="1.0"/>

</LinearLayout>