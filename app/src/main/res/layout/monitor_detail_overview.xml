<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/dataViewPadding"
    android:paddingLeft="@dimen/dataViewPadding"
    android:background="@drawable/background_border"
    android:weightSum="1.0">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/timer"
            android:text="10:51"
            android:textSize="@dimen/textSizeDetailOverviewTimer"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1"
            android:layout_marginRight="@dimen/textMargin"/>

        <TextView
            android:id="@+id/squadname"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Atemschutztrupp1Atemschutztrupp1Atemschutztrupp1"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textSizeDetailOverviewBig"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/state"
            android:layout_width="0dp"
            android:text="state"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textSizeDetailOverviewMedium"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_rowWeight="3" />
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/leaderText"
            android:paddingEnd="@dimen/textMargin"
            android:text="@string/leaderShortText"
            android:textSize="@dimen/textSizeDetailOverview"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberText"
            android:paddingEnd="@dimen/textMargin"
            android:text="@string/memberShortText"
            android:textSize="@dimen/textSizeDetailOverview"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderName"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="TestHuberTestHuberTestHuberTestHuberTestHuberTestHuberTestHuberTestHuber"
            android:textSize="@dimen/textSizeDetailOverview"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberName"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="M端llerM端llerM端llerM端ller"
            android:textSize="@dimen/textSizeDetailOverview"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/leaderPressureInfo"
            android:paddingStart="@dimen/textMargin"
            android:text="180(30 Min)/40"
            android:textSize="@dimen/textSizeDetailOverview"
            app:layout_column="2"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/memberPressureInfo"
            android:paddingStart="@dimen/textMargin"
            android:text="180(30 Min)/50"
            android:textSize="@dimen/textSizeDetailOverview"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>

</LinearLayout>



