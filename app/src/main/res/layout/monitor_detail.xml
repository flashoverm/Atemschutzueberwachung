<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/buttonSide">


        <include
            android:layout="@layout/monitor_detail_infoscreen"
            android:id="@+id/infoScreen"
            android:layout_above="@+id/buttonBottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/buttonBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/buttonSide"
            android:orientation="horizontal"
            android:layout_weight="3">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="Einsatzbeginn" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonX"
            android:layout_alignStart="@+id/buttonX"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Ankunft Ziel" />

        <Button
            android:id="@+id/buttonX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button7"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Druck eingeben" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonX"
            android:layout_alignStart="@+id/button5"
            android:layout_below="@+id/buttonX"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="RÃ¼ckzug" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonX"
            android:layout_alignStart="@+id/buttonX"
            android:layout_below="@+id/button6"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Einsatzende" />
    </LinearLayout>

</RelativeLayout>